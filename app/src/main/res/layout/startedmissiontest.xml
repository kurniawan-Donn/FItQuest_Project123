<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">

    <!-- Header Biru -->
    <View
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="78dp"
        android:background="@drawable/header_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Tombol Back (Icon Panah) -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="38dp"
        android:layout_height="34dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="23dp"
        android:src="@drawable/icarrowleft"
        android:scaleType="centerInside"
        android:tint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Judul -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="Mulai Misi"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/header" />

    <!-- Card Putih (Kotak Info) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardInfo"
        android:layout_width="0dp"
        android:layout_height="187dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="15dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Timer -->
            <TextView
                android:id="@+id/tvTimer"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center"
                android:text="00:00:00"
                android:textColor="#0151ff"
                android:textSize="36sp"
                android:textStyle="bold"
                android:elevation="4dp" />

            <!-- Label Durasi -->
            <TextView
                android:id="@+id/tvLabelDurasi"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="DURASI"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginTop="8dp" />

            <!-- Tiga Kolom Data -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <!-- Jarak -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvJarakValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.0"
                        android:textColor="@color/black"
                        android:textSize="36sp" />

                    <TextView
                        android:id="@+id/tvJarakLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:text="JARAK (KM)"
                        android:textColor="#A1000000"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Kecepatan -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvKecepatanValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.0"
                        android:textColor="@color/black"
                        android:textSize="36sp" />

                    <TextView
                        android:id="@+id/tvKecepatanLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:text="KECEPATAN (KPJ)"
                        android:textColor="#A1000000"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Kalori -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvKaloriValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.0"
                        android:textColor="@color/black"
                        android:textSize="36sp" />

                    <TextView
                        android:id="@+id/tvKaloriLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:text="KALORI (KCAL)"
                        android:textColor="#A1000000"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Peta -->
    <FrameLayout
        android:id="@+id/mapContainer"
        android:layout_width="375dp"
        android:layout_height="375dp"
        android:layout_marginTop="290dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Google Map akan ditambahkan secara programmatic -->
        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Atau ImageView untuk placeholder -->
        <ImageView
            android:id="@+id/ivMapPlaceholder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/map_placeholder" />
    </FrameLayout>

    <!-- Tombol MULAI -->
    <androidx.cardview.widget.CardView
        android:id="@+id/btnStart"
        android:layout_width="342dp"
        android:layout_height="38dp"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="#00a3ff"
        app:cardCornerRadius="50dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="MULAI"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <!-- Stepper (untuk kontrol zoom atau setting) -->
    <LinearLayout
        android:id="@+id/stepper"
        android:layout_width="32dp"
        android:layout_height="71dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="368dp"
        android:background="@drawable/stepper_background"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Tombol Tambah -->
        <Button
            android:id="@+id/btnPlus"
            android:layout_width="32dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/stepper_button_top"
            android:text="+"
            android:textColor="@color/black" />

        <!-- Garis Pemisah -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000" />

        <!-- Tombol Kurang -->
        <Button
            android:id="@+id/btnMinus"
            android:layout_width="32dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/stepper_button_bottom"
            android:text="-"
            android:textColor="@color/black" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>