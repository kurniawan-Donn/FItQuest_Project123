<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/headertukarpoint"
        android:layout_height="100dp"
        android:layout_width="match_parent"
        android:background="@drawable/header_complete_shadow"
        android:backgroundTint="?attr/colorPrimary">
        <ImageButton
            android:id="@+id/backbutton"
            android:layout_width="38dp"
            android:layout_height="34dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="19dp"
            android:padding="0dp"
            android:scaleType="centerInside"
            android:src="@drawable/icarrowleft"
            android:background="@drawable/ripplebutton"/>
        <TextView
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:text="Tukar Point"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="?attr/colorOnPrimary"
            android:fontFamily="@font/intermedium"
            android:gravity="center"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/cardkoin"
        android:layout_below="@+id/headertukarpoint"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="10dp">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="18dp"
            android:layout_marginVertical="5dp"
            app:cardBackgroundColor="?attr/colorSurfaceVariant"
            app:strokeColor="#DCD177"
            app:strokeWidth="1dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/interbold"
                android:text="Point Kamu:"
                android:textColor="#000000"
                android:textSize="20sp" />
            
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="15dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/rectangle1"
                android:layout_gravity="bottom">
                <ImageView
                    android:layout_marginStart="5dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_coin"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/pointamount"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="37dp"
                    android:textSize="27sp"
                    android:fontFamily="@font/interbold"
                    android:textAlignment="center"
                    android:text="0"
                    android:textColor="@color/black"/>
            </FrameLayout>
        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/tukarpointcard"
        android:layout_below="@+id/cardkoin"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="18dp"
            android:layout_marginVertical="10dp"
            app:cardBackgroundColor="?attr/colorSurfaceVariant"
            app:strokeColor="#DCD177"
            app:strokeWidth="1dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="Penukaran"
                android:fontFamily="@font/intersemibold"
                android:textColor="#000000"/>

            <LinearLayout
                android:id="@+id/btn_lihat_lainnya"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="end"
                android:layout_marginHorizontal="20dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:fontFamily="@font/interlight"
                    android:text="Lihat Lainnya"
                    android:textColor="#777777"
                    android:textSize="19sp" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/ic_chevronright"
                    />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="430dp"
                android:layout_gravity="bottom">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/customCard1"
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="20dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="10dp"
                    app:strokeColor="#009AD2"
                    app:strokeWidth="3dp">
                    
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <!-- Guideline untuk posisi garis di kiri (misal 30% lebar card) -->
                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/leftSection"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.25" />

                        <!-- Garis Vertikal -->
                        <View
                            android:id="@+id/view"
                            android:layout_width="3dp"
                            android:layout_height="match_parent"
                            android:background="#009AD2"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/leftSection"
                            app:layout_constraintTop_toTopOf="parent" />

                        <!-- KONTEN AREA KIRI (Icon / gambar) -->
                        <!-- Isi konten kamu di sini (ImageView later) -->
                        <ImageView
                            android:id="@+id/icondiskon"
                            android:layout_width="82dp"
                            android:layout_height="82dp"
                            android:src="@drawable/ic_diskonikon"
                            android:paddingHorizontal="15dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/leftSection"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <!-- KONTEN AREA KANAN   (Teks + Tombol) -->
                        <!-- Isi konten kamu di sini -->
                        <TextView
                            android:layout_width="170dp"
                            android:layout_height="60dp"
                            android:fontFamily="@font/intermedium"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:paddingTop="5dp"
                            android:text="Diskon 10% semua produk di shopeefood"
                            android:textColor="#132719"
                            android:textSize="15sp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/leftSection" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="28dp"
                            android:layout_marginStart="3dp"
                            android:gravity="center"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@id/icondiskon">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_coin"/>
                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/interregular"
                                android:textColor="#017899"
                                android:text="100"
                                android:layout_marginStart="20dp"/>
                        </RelativeLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btntrade1"
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="8dp"
                            android:backgroundTint="?attr/colorPrimary"
                            android:text="Tukar"
                            android:textAllCaps="false"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:padding="0dp"
                            app:cornerRadius="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:rippleColor="?attr/colorOnPrimary"
                            app:strokeColor="#3CFB06"
                            app:strokeWidth="1dp" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/customCard2"
                    android:layout_below="@+id/customCard1"
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="20dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="10dp"
                    app:strokeColor="#009AD2"
                    app:strokeWidth="3dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <!-- Guideline untuk posisi garis di kiri (misal 30% lebar card) -->
                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/leftSection2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.25" />

                        <!-- Garis Vertikal -->
                        <View
                            android:layout_width="3dp"
                            android:layout_height="match_parent"
                            android:background="#009AD2"
                            app:layout_constraintEnd_toStartOf="@id/leftSection2"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <!-- KONTEN AREA KIRI (Icon / gambar) -->
                        <!-- Isi konten kamu di sini (ImageView later) -->
                        <ImageView
                            android:id="@+id/iconcoffe"
                            android:layout_width="82dp"
                            android:layout_height="82dp"
                            android:src="@drawable/ic_coffe"
                            android:paddingHorizontal="15dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/leftSection2"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />
                        <!-- KONTEN AREA KANAN (Teks + Tombol) -->
                        <!-- Isi konten kamu di sini -->
                        <TextView
                            android:layout_width="170dp"
                            android:layout_height="60dp"
                            android:text="Voucher Kopi di Toko Kopi Kenangan"
                            android:textSize="15sp"
                            android:fontFamily="@font/intermedium"
                            android:textColor="#132719"
                            android:paddingTop="5dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            app:layout_constraintStart_toEndOf="@id/iconcoffe"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/leftSection2"
                            />
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="28dp"
                            android:layout_marginStart="3dp"
                            android:gravity="center"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@id/iconcoffe">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_coin"/>
                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/interregular"
                                android:textColor="#017899"
                                android:text="400"
                                android:layout_marginStart="20dp"/>
                        </RelativeLayout>
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btntrade2"
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="8dp"
                            android:backgroundTint="?attr/colorPrimary"
                            android:text="Tukar"
                            android:textAllCaps="false"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:padding="0dp"
                            app:cornerRadius="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:rippleColor="?attr/colorOnPrimary"
                            app:strokeColor="#3CFB06"
                            app:strokeWidth="1dp" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/customCard3"
                    android:layout_below="@+id/customCard2"
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="20dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="10dp"
                    app:strokeColor="#009AD2"
                    app:strokeWidth="3dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <!-- Guideline untuk posisi garis di kiri (misal 30% lebar card) -->
                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/leftSection3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.25" />

                        <!-- Garis Vertikal -->
                        <View
                            android:layout_width="3dp"
                            android:layout_height="match_parent"
                            android:background="#009AD2"
                            app:layout_constraintEnd_toStartOf="@id/leftSection3"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <!-- KONTEN AREA KIRI (Icon / gambar) -->
                        <!-- Isi konten kamu di sini (ImageView later) -->
                        <ImageView
                            android:id="@+id/icongiftcard"
                            android:layout_width="82dp"
                            android:layout_height="82dp"
                            android:src="@drawable/ic_giftcard2"
                            android:paddingHorizontal="15dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/leftSection3"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <!-- KONTEN AREA KANAN (Teks + Tombol) -->
                        <!-- Isi konten kamu di sini -->
                        <TextView
                            android:layout_width="170dp"
                            android:layout_height="60dp"
                            android:text="Giftcard pembelian 25rb"
                            android:textSize="15sp"
                            android:fontFamily="@font/intermedium"
                            android:textColor="#132719"
                            android:paddingTop="5dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            app:layout_constraintStart_toEndOf="@id/icongiftcard"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/leftSection3"
                            />
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="28dp"
                            android:layout_marginStart="3dp"
                            android:gravity="center"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@id/icongiftcard">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_coin"/>
                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/interregular"
                                android:textColor="#017899"
                                android:text="1200"
                                android:layout_marginStart="20dp"/>
                        </RelativeLayout>
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btntrade3"
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="8dp"
                            android:backgroundTint="?attr/colorPrimary"
                            android:text="Tukar"
                            android:textAllCaps="false"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:padding="0dp"
                            app:cornerRadius="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:rippleColor="?attr/colorOnPrimary"
                            app:strokeColor="#3CFB06"
                            app:strokeWidth="1dp" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/customCard4"
                    android:layout_below="@+id/customCard3"
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="20dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="10dp"
                    app:strokeColor="#009AD2"
                    app:strokeWidth="3dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <!-- Guideline untuk posisi garis di kiri (misal 30% lebar card) -->
                            <androidx.constraintlayout.widget.Guideline
                                android:id="@+id/leftSection4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintGuide_percent="0.25" />
                            <!-- Garis Vertikal -->
                            <View
                                android:layout_width="3dp"
                                android:layout_height="match_parent"
                                android:background="#009AD2"
                                app:layout_constraintEnd_toStartOf="@id/leftSection4"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent" />

                            <!-- KONTEN AREA KIRI (Icon / gambar) -->
                            <!-- Isi konten kamu di sini (ImageView later) -->
                            <ImageView
                                android:id="@+id/iconpulsa"
                                android:layout_width="82dp"
                                android:layout_height="82dp"
                                android:src="@drawable/ic_pulsa"
                                android:paddingHorizontal="15dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toStartOf="@id/leftSection4"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent" />

                            <!-- KONTEN AREA KANAN (Teks + Tombol) -->
                            <!-- Isi konten kamu di sini -->
                            <TextView
                                android:layout_width="170dp"
                                android:layout_height="60dp"
                                android:text="Voucher Pulsa 50rb"
                                android:textSize="15sp"
                                android:fontFamily="@font/intermedium"
                                android:textColor="#132719"
                                android:paddingTop="5dp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                app:layout_constraintStart_toEndOf="@id/iconpulsa"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="@+id/leftSection4"
                                />
                            <RelativeLayout
                               
                                android:layout_width="wrap_content"
                                android:layout_height="28dp"
                                android:layout_marginStart="3dp"
                                android:gravity="center"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@id/iconpulsa">
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_coin"/>
                                <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/interregular"
                                    android:textColor="#017899"
                                    android:text="2000"
                                    android:layout_marginStart="20dp"/>
                            </RelativeLayout>
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btntrade4"
                                android:layout_width="60dp"
                                android:layout_height="40dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="8dp"
                                android:backgroundTint="?attr/colorPrimary"
                                android:text="Tukar"
                                android:textAllCaps="false"
                                android:textColor="#FFFFFF"
                                android:textSize="14sp"
                                android:padding="0dp"
                                app:cornerRadius="8dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:rippleColor="?attr/colorOnPrimary"
                                app:strokeColor="#3CFB06"
                                app:strokeWidth="1dp" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>
</RelativeLayout>