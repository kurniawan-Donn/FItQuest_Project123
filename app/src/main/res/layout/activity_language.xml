<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorSurface">

    <!-- Header -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/header_complete_shadow"
            android:backgroundTint="?attr/colorPrimary"
            android:padding="16dp">

            <!-- Back Button -->
            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="38dp"
                android:layout_height="34dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrowleft"
                android:background="@drawable/ripplebutton"
                android:contentDescription="@string/back"
                android:scaleType="centerInside"/>

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/change_language"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="24sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <!-- Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Instruction Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_language"
            android:textColor="?attr/colorOnSurface"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>

        <!-- Indonesian Language Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardIndonesian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="?attr/colorSurfaceVariant"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <!-- Flag Icon -->
                <TextView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:text="ðŸ‡®ðŸ‡©"
                    android:textSize="32sp"
                    android:gravity="center"/>

                <!-- Language Info -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/language_indonesian"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Indonesia"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="14sp"/>
                </LinearLayout>

                <!-- Selected Indicator -->
                <ImageView
                    android:id="@+id/ivSelectedIndonesian"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_checked"
                    android:visibility="gone"
                    android:contentDescription="Selected"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- English Language Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardEnglish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="?attr/colorSurfaceVariant"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <!-- Flag Icon -->
                <TextView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:text="ðŸ‡¬ðŸ‡§"
                    android:textSize="32sp"
                    android:gravity="center"/>

                <!-- Language Info -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/language_english"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="English"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="14sp"/>
                </LinearLayout>

                <!-- Selected Indicator -->
                <ImageView
                    android:id="@+id/ivSelectedEnglish"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_checked"
                    android:visibility="gone"
                    android:contentDescription="Selected"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>