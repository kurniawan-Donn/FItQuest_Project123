<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:textColor="?attr/colorOnPrimary">

    <!-- Header (Tetap/Fixed di atas) -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/header_complete_shadow"
            android:padding="16dp">

            <!-- Back Button -->
            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ripplebutton"
                android:contentDescription="@string/back"
                android:padding="4dp"
                android:src="@drawable/ic_arrowleft" />

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/terms_conditions"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- Area Konten yang bisa di-scroll -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- White Card Content -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="?attr/colorSurfaceVariant"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp">

                <TextView
                    android:id="@+id/TermsContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:justificationMode="inter_word"
                    android:padding="16dp"
                    android:text="@string/terms_content"
                    android:textColor="?attr/colorOnSurface"
                    tools:targetApi="O"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- Tombol Kembali (Fixed di bawah atau mau ikut scroll?
         Di sini saya buat fixed di bagian bawah layar agar selalu terlihat) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:cardBackgroundColor="?attr/colorSurfaceVariant">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnKembali"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:backgroundTint="#00A3FF"
            android:text="Kembali"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="16sp"
            app:cornerRadius="28dp"
            app:elevation="4dp" />
    </LinearLayout>

</LinearLayout>
